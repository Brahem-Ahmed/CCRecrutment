{% extends 'base.html.twig' %}

{% block title %}Candidat index{% endblock %}

{% block body %}
    <h1>Candidat index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>User</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Mot_de_passe</th>
                <th>Role</th>
                <th>Date_inscription</th>
                <th>Etat</th>
                <th>Prenom</th>
                <th>Cv</th>
                <th>Lettre_motivation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for candidat in candidats %}
            <tr>
                <td>{{ candidat.id }}</td>
                <td>{{ candidat.User }}</td>
                <td>{{ candidat.nom }}</td>
                <td>{{ candidat.email }}</td>
                <td>{{ candidat.motDePasse }}</td>
                <td>{{ candidat.role }}</td>
                <td>{{ candidat.dateInscription ? candidat.dateInscription|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ candidat.etat ? 'Yes' : 'No' }}</td>
                <td>{{ candidat.prenom }}</td>
                <td>{{ candidat.cv }}</td>
                <td>{{ candidat.lettreMotivation }}</td>
                <td>
                    <a href="{{ path('app_candidat_show', {'id': candidat.id}) }}">show</a>
                    <a href="{{ path('app_candidat_edit', {'id': candidat.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_candidat_new') }}">Create new</a>
{% endblock %}
